<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/blue"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/imagehome"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/header_home"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:id="@+id/imagesafari"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/header_safari"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="230dp"
        android:paddingRight="230dp"
        android:paddingTop="65dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="測驗說明"
            android:gravity="center_horizontal"
            android:textColor="@color/blue"
            android:textSize="40dp">
        </TextView>
        <TextView android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:text="距離上次專注力測驗已滿一個月，\n你也已經完成20次每日任務，\n點擊下方進行新的專注力測驗！"
            android:textSize="30dp"
            android:gravity="center_vertical"
            android:background="@drawable/scrollview_shape_round"
            android:elevation="5dp"
            android:paddingLeft="110dp"
            android:letterSpacing="0.3"
            android:textColor="@color/blue"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn_start_test"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="560dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_shape_round"
            android:text="進入測驗"
            android:textColor="#FFFFFFFF" />
    </LinearLayout>

</LinearLayout>