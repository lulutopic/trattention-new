<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameResult"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:background="@color/blue">
        <ImageView
            android:id="@+id/imagehome"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/header_home"
            android:layout_marginRight="20dp"
            />
        <ImageView
            android:id="@+id/imagesafari"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/header_safari"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/text7"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@color/background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="遊戲結果"
            android:textColor="#30449F"
            android:textSize="50dp"
            android:typeface="monospace"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:paddingLeft="90dp"
        android:paddingRight="50dp"
        android:paddingTop="30dp">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/game_result_background"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="上次訓練秒數"
                android:textColor="#30449F"
                android:textSize="30dp"
                android:typeface="monospace"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/lastTimeRecord"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:text="TextView"
                android:textSize="50dp"
                android:textColor="@color/blue"
                android:layout_gravity="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:background="@drawable/game_result_background">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="此次訓練秒數"
                android:textColor="#30449F"
                android:textSize="30dp"
                android:typeface="monospace"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/thisTimeRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="50dp"
                android:textColor="@color/blue"
                android:layout_gravity="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:background="@drawable/game_result_background">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="兩次相差秒數"
                android:textColor="#30449F"
                android:textSize="30dp"
                android:typeface="monospace"
                android:layout_marginTop="30dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:paddingTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_horizontal"
            android:text="比上次進步了10秒哦，繼續保持"
            android:textColor="#30449F"
            android:textSize="35dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/index"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/button_shape_round"
            android:text="回到首頁"
            android:textColor="#FFFFFFFF" />
    </LinearLayout>
</LinearLayout>