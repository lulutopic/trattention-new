<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MemoryGamePro"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/blue"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/imagepause"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/game_header_pause"
            android:layout_marginRight="20dp"
            />
        <ImageView
            android:id="@+id/imagetips"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/game_header_tips"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/text7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/background"
        android:layout_weight="1"
        android:gravity="center">
        <Chronometer
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format="00:00:00"
            android:textSize="70sp"
            android:textColor="@color/blue"
            android:letterSpacing="0.4">
        </Chronometer>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:background="@color/background"
            android:text="3/3"
            android:textColor="@color/blue"
            android:textSize="25sp">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="0dp"
        >
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:elevation="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:gravity="center"
                android:text="我想要"
                android:textColor="@color/blue"
                android:textSize="40dp">

            </TextView>
            <ImageView
                android:id="@+id/iv_100"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="center"
                android:src="@drawable/memoryback" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/up_arrow"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/up_arrow"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/left_arrow"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/left_arrow"/>

                <ImageView
                    android:id="@+id/ok"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:scaleType="center"
                    android:src="@drawable/ok"
                    android:layout_marginLeft="52dp"
                    />
                <ImageView
                    android:id="@+id/right_arrow"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:scaleType="center"
                    android:src="@drawable/right_arrow"
                    android:layout_marginLeft="52dp"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
