<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameResultMemory"
    android:background="@drawable/bg_main">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trattention"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp" />
        <ImageView
            android:id="@+id/imagehome"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/header_home"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/imagesafari" />
        <ImageView
            android:id="@+id/imagesafari"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:src="@drawable/header_safari"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:background="@drawable/scrollview_shape_round"
        android:layout_margin="50dp"
        android:elevation="10dp"
        android:gravity="center">
        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="遊戲結果"
            android:textSize="50sp"
            android:textStyle="bold"
            android:letterSpacing="0.2"
            android:textColor="@color/blue"
            android:layout_centerHorizontal="true"
            android:elevation="11dp"
            android:typeface="sans"/>
        <RelativeLayout
            android:id="@+id/last_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/this_block"
            android:background="@drawable/game_result_background"
            android:padding="20dp"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@id/title1"
            android:layout_marginTop="20dp"
            android:elevation="11dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="最佳訓練秒數"
                    android:textColor="@color/blue"
                    android:textSize="30dp"
                    android:typeface="monospace"
                    android:layout_marginTop="30dp" />
                <TextView
                    android:id="@+id/lastTimeRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="40dp"
                    android:textColor="@color/darkgray"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/this_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/game_result_background"
            android:padding="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@id/title1"
            android:layout_marginTop="20dp"
            android:elevation="11dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="此次訓練秒數"
                    android:textColor="@color/blue"
                    android:textSize="30sp"
                    android:typeface="monospace"
                    android:layout_marginTop="30dp" />
                <TextView
                    android:id="@+id/thisTimeRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="40sp"
                    android:textColor="@color/darkgray"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/minus_block"
            android:layout_toRightOf="@+id/this_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/game_result_background"
            android:padding="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@id/title1"
            android:layout_marginTop="20dp"
            android:elevation="11dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="兩次相差秒數"
                    android:textColor="@color/blue"
                    android:textSize="30sp"
                    android:typeface="monospace"
                    android:layout_marginTop="30dp" />
                <TextView
                    android:id="@+id/differSeconds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="40sp"
                    android:textColor="@color/darkgray"
                    android:gravity="center"
                    android:layout_margin="20dp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/minus_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:layout_marginVertical="30dp"
            android:elevation="11dp">
            <TextView
                android:id="@+id/recordCompare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="比上次進步了10秒哦，繼續保持"
                android:textColor="@color/blue"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:letterSpacing="0.2"
                android:layout_marginBottom="30dp"/>
            <Button
                android:id="@+id/index"
                android:layout_below="@+id/recordCompare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_yellow_shape_round"
                android:paddingHorizontal="50dp"
                android:letterSpacing="0.2"
                android:textColor="@color/blue"
                android:text="回到首頁"
                android:textSize="20sp"
                android:elevation="11dp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>