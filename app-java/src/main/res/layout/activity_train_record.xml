<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".AttentionTestHome">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="@color/blue"
        >
        <ImageView
            android:id="@+id/imagehome"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/header_home"
            android:layout_marginRight="20dp"
            />
        <ImageView
            android:id="@+id/imagesafari"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/header_safari"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/record_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_yellow_shape_round"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/text_pair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="圖形配對"
            android:textColor="@color/blue"
            android:textSize="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:letterSpacing="0.3"
            />
        <TextView
            android:id="@+id/text_schulte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="舒爾特方格"
            android:textColor="@color/yellow_900"
            android:textSize="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:letterSpacing="0.3"
            />
        <TextView
            android:id="@+id/text_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="記憶力遊戲"
            android:textColor="@color/yellow_900"
            android:textSize="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:letterSpacing="0.3"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"

        android:layout_marginHorizontal="100dp"
        android:background="@drawable/scrollview_shape_round"
        android:gravity="center"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:background="@drawable/scrollview_shape_round"
            android:orientation="vertical"
            android:padding="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的成績如何"
                android:textColor="@color/blue"
                android:textSize="20dp"
                android:letterSpacing="0.1"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_blue_shape_round"
                android:orientation="vertical"
                android:padding="20dp">
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart_bar"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/button_blue_shape_round"
                />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="550dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:background="@drawable/scrollview_shape_round"
            android:orientation="vertical"
            android:padding="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="遊戲秒數"
                android:textColor="@color/blue"
                android:textSize="20dp"
                android:letterSpacing="0.1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_blue_shape_round"
                android:orientation="vertical"
                android:padding="20dp">
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_line"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                />
                </LinearLayout>


        </LinearLayout>




    </LinearLayout>

</LinearLayout>