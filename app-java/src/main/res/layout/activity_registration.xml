<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Registration"
    android:background="@color/lightgray">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/scrollview_shape_round"
        android:padding="150dp"
        android:elevation="10dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:text="註冊"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="50sp" />
        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="信箱"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/email"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="信箱"/>
        <EditText
            android:id="@+id/pConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/password"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="信箱"/>
        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="信箱"/>
        <Spinner
            android:id="@+id/gender"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/pConfirm"
            android:layout_toRightOf="@+id/name"
            android:ems="10"
            android:background="@drawable/registration_spinner_back"/>
        <Spinner
            android:id="@+id/age"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:layout_below="@+id/pConfirm"
            android:layout_toRightOf="@+id/gender"
            android:ems="10"
            android:background="@drawable/registration_spinner_back"/>
        <Button
            android:id="@+id/registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/gender"
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:text="註冊"
            android:elevation="5dp"
            android:textColor="@color/white"
            android:background="@drawable/button_shape_round"/>
    </RelativeLayout>




</RelativeLayout>