<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".AttentionTestHome">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trattention"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp" />
        <ImageView
            android:id="@+id/imagehome"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/header_home"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/imagesafari" />
        <ImageView
            android:id="@+id/imagesafari"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:src="@drawable/header_safari"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:background="@drawable/bg_main"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:id="@+id/focus_chart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:background="@drawable/scrollview_shape_round"
            android:layout_weight="1"
            android:layout_margin="40dp"
            android:elevation="10dp">
            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/tag"
                android:gravity="center"
                android:paddingTop="19dp"
                android:text="專注力月數據圖表"
                android:textColor="@color/gray"
                android:textSize="35dp"
                android:textStyle="italic"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:elevation="11dp"
                android:letterSpacing="0.2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title1"
                android:background="@drawable/button_blue_shape_round"
                android:padding="20dp"
                android:layout_margin="30dp"
                android:elevation="11dp">
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_line"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/test_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/scrollview_shape_round"
            android:layout_toRightOf="@+id/focus_chart"
            android:layout_below="@id/header"
            android:layout_weight="1"
            android:layout_margin="40dp"
            android:elevation="10dp">
            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/tag"
                android:gravity="center"
                android:paddingTop="19dp"
                android:text="測驗結果比較"
                android:textColor="@color/gray"
                android:textSize="35dp"
                android:textStyle="italic"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:elevation="11dp"
                android:letterSpacing="0.2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title2"
                android:background="@drawable/button_blue_shape_round"
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_margin="30dp"
                android:elevation="11dp">
                <TextView
                    android:id="@+id/pre_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@+id/title2"
                    android:background="@drawable/last_score"
                    android:elevation="5dp"
                    android:layout_marginTop="30dp"
                    android:paddingTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="無"
                    android:textColor="@color/darkgray"
                    android:textSize="35dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/cur_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@+id/pre_attention"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:paddingTop="10dp"
                    android:background="@drawable/this_score"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:text="無"
                    android:textColor="@color/darkgray"
                    android:textSize="35dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_home_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_yellow_shape_round"
        android:paddingHorizontal="50dp"
        android:letterSpacing="0.2"
        android:textColor="@color/blue"
        android:text="開始測驗"
        android:textSize="20sp"
        android:elevation="5dp" />
</RelativeLayout>